name: CI

on:
  push:
  pull_request:

jobs:
  checks:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up uv
        uses: astral-sh/setup-uv@v7

      - name: Sync deps
        run: uv sync --group lint --group test

      - name: Lint
        run: uv run ruff check .

      - name: Test
        run: uv run pytest
