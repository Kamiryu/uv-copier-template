[project]
name = "{{ project_slug }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
requires-python = ">={{ python_min_version }}"
authors = [{ name = "{{ author_name }}", email = "{{ author_email }}" }]
{% if license == "MIT" %}
license = { text = "MIT" }
{% else %}
license = { text = "Proprietary" }
{% endif %}
dependencies = [
  "pydantic-settings>=2.6",
{% if project_type == "cli" %}
  "typer>=0.12",
{% elif project_type == "api" %}
  "fastapi>=0.110",
  "uvicorn[standard]>=0.29",
{% elif project_type == "ml" %}
  "numpy>=1.26",
  "pandas>=2.2",
  "scikit-learn>=1.5",
{% endif %}
]

{% if project_type == "cli" %}
[project.scripts]
{{ project_slug }} = "{{ package_name }}.cli:app"
{% endif %}

[dependency-groups]
dev = [
  "ipykernel>=6.29",
  "pre-commit>=3.0",
]
lint = [
  "ruff>=0.8",
  "mypy>=1.13",
]
test = [
  "pytest>=8.3",
  "pytest-cov>=5.0",
]

[tool.pytest.ini_options]
addopts = "-q"
testpaths = ["tests"]

[tool.ruff]
line-length = 88
target-version = "py{{ python_min_version | replace('.', '') }}"
fix = true
force-exclude = true

[tool.ruff.lint]
select = ["E", "F", "I", "B", "UP"]
